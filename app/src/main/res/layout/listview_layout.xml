<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_106sdp"
        android:layout_height="@dimen/_85sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/_30sdp"
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/_30sdp"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="@dimen/_52sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtName"
        android:textColor="@color/black"
        android:text="Villa"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/txtBedRooms"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_alignBottom="@+id/txtTitle"
        android:layout_toEndOf="@+id/imageBed"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_toRightOf="@+id/imageBed" />


    <ImageView
        android:id="@+id/imageBed"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_below="@+id/txtName"
        android:layout_toEndOf="@+id/txtTitle"
        android:layout_toRightOf="@+id/txtTitle"
        app:srcCompat="@drawable/icon_bed3"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageBath"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtName"
        android:layout_marginEnd="83dp"
        app:srcCompat="@drawable/icon_bath"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginRight="83dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/txtbath"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_alignBottom="@+id/txtTitle"
        android:layout_marginStart="-83dp"
        android:layout_toEndOf="@+id/imageBath"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginLeft="-83dp"
        android:layout_toRightOf="@+id/imageBath" />


    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtName"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp" />
</RelativeLayout>